{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app/src"
                },
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app/src/utils"
                }
            ]
        }
    ]
}